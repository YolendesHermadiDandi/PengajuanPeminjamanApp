@model API.DTOs.Accounts.ChangePasswordAccountDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, invoice, html5, responsive, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Login</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.jpg">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body class="account-page">
    <div class="main-wrapper">
        <div class="account-content">
            <div class="login-wrapper">
                <div class="login-content">
                    <div class="login-userset">
                        <div class="login-logo">
                            <img src="~/assets/img/logo.png" alt="img">
                        </div>
                        <div class="login-userheading">
                            <h3>Lupa Kata Sandi</h3>
                            <h4>Masukan Email Anda Untuk Mengganti Ulang Kata Sandi anda</h4>
                            @if (TempData.ContainsKey("Alerts"))
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["Alerts"]
                                </div>
                            }
                        </div>
                        <form asp-action="ResetPasswordAccount" onsubmit="return validateFormPassword(event)">
                            <div class="form-login">
                                <label asp-for="Email">Email Anda</label>
                                <div class="input-group mb-3">
                                    <input asp-for="Email" type="text" id="email" class="form-control" placeholder="Masukan Email Anda" aria-label="Email User" aria-describedby="basic-addon2">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" style="width:100px;" id="button-addon2" type="button">Kirim</button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-login">
                                <label asp-for="Otp">OTP</label>
                                <input asp-for="Otp" type="text" id="OTP" placeholder="Masukan OTP">
                            </div>
                        <div class="form-login">
                                    <label asp-for="NewPassword"></label>
                            <div class="pass-group">
                                    <input asp-for="NewPassword" type="password" id="Password" class="pass-input" placeholder="Masukan kata sandi Baru">
                                <span class="fas toggle-password fa-eye-slash"></span>
                            </div>
                        </div>
                        <div class="form-login">
                                    <label asp-for="ConfirmPassword"></label>
                            <div class="pass-group">
                                    <input asp-for="ConfirmPassword" type="password" id="RePassword" class="pass-input" placeholder="Masukan Ulang kata Baru">
                                    <span class="fas toggle-password fa-eye-slash"></span>
                            </div>
                        </div>
                            <div class="form-login">
                                <div class="alreadyuser">
                                    <h4><a asp-controller="Authentication" asp-action="Index" class="hover-a">Sudah Punya Akun?</a></h4>
                                </div>
                            </div>
                            <div class="form-login">
                                <input type="submit" value="Reset Password" class="btn btn-login" />
                            </div>
                            </form>
                    </div>
                </div>
                <div class="login-img">
                    <img src="~/assets/img/login.jpg" alt="img">
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Auth.js"></script>
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/assets/js/feather.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/script.js"></script>
</body>
</html>