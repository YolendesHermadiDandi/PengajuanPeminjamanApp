@model API.DTOs.Accounts.ClaimsDto

@{
    ViewData["Title"] = "Profile";
    if (Model.Role.Contains("Admin"))
    {
        Layout = "AdminLayout";
    }
    else
    {
        Layout = "_LayoutEmployeePanel";
    }
}
<div class="page-header">
    <div class="page-title">
        <h4>Profile</h4>
        <h6>User Profile</h6>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="profile-set">
            <div class="profile-head overflow-hidden">
                <img src="https://source.unsplash.com/random/2080x500/?city,night" alt="img">
            </div>
            <div class="profile-top">
                <div class="profile-content">
                    <div class="profile-contentimg">
                        <img id="result-img" src="~/assets/img/customer/customer5.jpg" alt="img">
                        <img id="original-img" src="~/assets/img/customer/customer5.jpg" alt="img" hidden>
                        <div class="profileupload">
                            <a href="javascript:void(0);"><img src="~/assets/img/icons/edit-set.svg" data-bs-toggle="modal" onclick="UploadImg()" data-bs-target="#changeProfile" alt="img"></a>
                        </div>
                    </div>
                    <div class="profile-contentname">
                        @* <h2>{Full Name}</h2>
                        <h4>Ini adalah halaman profil utama anda.</h4> *@
                    </div>
                </div>
                <div class="ms-auto">
                    <a href="javascript:void(0);" id="imageSave" onclick="Save()" class="btn btn-submit me-2">Save</a>
                    <a href="javascript:void(0);" id="imageCancel" onclick="Cancel()" class="btn btn-cancel">Cancel</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="form-group">
                    <label>NIK</label>
                    <input id="nik" type="text" readonly disabled>
                    <input id="guid" type="text" hidden readonly disabled>
                </div>
            </div><div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Nama Depan</label>
                    <input id="firstName" type="text" readonly disabled>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Nama Belakang</label>
                    <input id="lastName" type="text" readonly disabled>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Email</label>
                    <input id="email" type="text" readonly disabled>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>No Handphone</label>
                    <input id="phoneNumber" type="text" readonly disabled>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Birth Date</label>
                    <input id="birthDate" type="text" readonly disabled>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Gender</label>
                    <input id="gender" type="text" readonly disabled>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Hiring Date</label>
                    <input id="hiringDate" type="text" readonly disabled>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12"></div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Password</label>
                    <div class="pass-group">
                        <input id="password" type="password" class=" pass-input">
                        <span class="fas toggle-password fa-eye-slash"></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="form-group">
                    <label>Confirm Password</label>
                    <div class="pass-group">
                        <input id="passwords" type="password" class=" pass-inputs">
                        <span class="fas toggle-passworda fa-eye-slash"></span>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <a href="javascript:void(0);" onclick="Update()" class="btn btn-submit me-2">Submit</a>
                <a href="javascript:void(0);" onclick="Cancel()" class="btn btn-cancel">Cancel</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="changeProfile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="page-title">
                    <h4>Select Profile Picture</h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">

                        <input type="file" id="upload" class="form-control custom-file-container__custom-file__custom-file-input"
                               accept="image/*">
                        <input type="hidden" name="MAX_FILE_SIZE" value="1024" />

                        <div id="image-container" hidden></div>
                        <button id="crop-btn" class="btn btn-primary" hidden>Crop</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer sticky">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>

                <div class="action-button">
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/Profile.js" asp-append-version="true"></script>
   <script src="~/js/adminDashboard.js" asp-append-version="true"></script>
    <script src="~/assets/js/croppie.js"></script>
    }