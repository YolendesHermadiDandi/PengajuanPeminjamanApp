@{
    ViewData["Title"] = "Admin";
    Layout = "AdminLayout";
}
<div class="col-12 col-md-6 col-lg-12 d-flex">
    <div class="card bg-white m-2 ">
        <div class="card-header">
            <h6 class="btn btn-primary pe-none">Request</h6>
        </div>
        <div class="card-body">
            <button class="btn btn-primary m-1 btn-sm">request 1</button>
            <button class="btn btn-primary m-1 btn-sm">request 2</button>
            <button class="btn btn-primary m-1 btn-sm">request 3</button>
            <button class="btn btn-primary m-1 btn-sm">request 4</button>
        </div>
    </div>

    <div class="card bg-white m-2">
        <div class="card-header">
            <h6 class="btn btn-primary pe-none">Approved</h6>
        </div>
        <div class="card-body">
            <button class="btn btn-primary m-1 btn-sm">request 1</button>
            <button class="btn btn-primary m-1 btn-sm">request 2</button>
            <button class="btn btn-primary m-1 btn-sm">request 3</button>
            <button class="btn btn-primary m-1 btn-sm">request 4</button>
        </div>
    </div>

    <div class="card bg-white m-2">
        <div class="card-header">
            <h6 class="btn btn-primary pe-none">Done</h6>
        </div>
        <div class="card-body">
            <button class="btn btn-primary m-1 btn-sm">request 1</button>
            <button class="btn btn-primary m-1 btn-sm">request 2</button>
            <button class="btn btn-primary m-1 btn-sm">request 3</button>
            <button class="btn btn-primary m-1 btn-sm">request 4</button>
        </div>
    </div>

</div>







<div class="modal fade" id="notifModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="page-title">
                    <h4>Nama Employee</h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body" id="modal-message">
                        @* <p>Melakukan Request Terhadap Fasilitas bla bla bla....</p> *@
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="close-modal" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" id="approved-modal" class="btn btn-success btn-sm">Approved</button>
                <button type="button" id="rejected-modal" class="btn btn-danger btn-sm">Rejected</button>
                <div class="action-button">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/adminDashboard.js" asp-append-version="true"></script>
}